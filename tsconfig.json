{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "es6",
      "es7"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
  },
  "include": ["src/**/*", "tests/**/*"]
}